	<package name="employeePkg" extends="struts-deafult" namespace="/">
	   <action name="employee_*" class="com.xmg.pss.web.action.EmployeeAction" method="{1}">
	       <result name="list" type="dispatcher">/WEB-INF/views/employee/list.jsp</result>
